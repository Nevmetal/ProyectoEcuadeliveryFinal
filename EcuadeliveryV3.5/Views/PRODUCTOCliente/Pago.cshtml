@model  Tuple<EcuadeliveryV3._5.USUARIO, IEnumerable<EcuadeliveryV3._5.DIRECCION>, EcuadeliveryV3._5.DIRECCION>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/PRODUCTOCliente/_LayoutCar.cshtml";
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
}

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">

    <link href="~/css/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/css/estilo.css" rel="stylesheet" />
    <script src="~/js/js/popper.min.js"></script>
    <script type="text/javascript">

        function vaciar() {
            localStorage.clear()
        }
    </script>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
          integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

    <link href="~/css/css/sweetalert2.min.css" rel="stylesheet" />
    <title>Carrito Compras en JavaScript</title>

</head>

<body>

    <br>

    <main>
        <div class="container" style="width: 600px">
            <h1 class="w3ls">Pago</h1>
            <div class="content-agileits">
                <form action="/PRODUCTOCliente/Pago" method="post" data-toggle="validator" role="form">
                    <div class="form-inline row ">
                        <div class="form-inline row ">
                            <div class="form-group col-sm-6">
                                <label for="firstname" class="control-label">Nombre</label>
                                <input type="text" class="form-control" name="Nombre" id="firstname" value="@Model.Item1.USU_NOMBRE" disabled>
                                <div class="help-block with-errors"></div>
                            </div>
                            <div id="carrito" class="col-sm-4 ">
                                <table class="table" id="lista-final">
                                    <tbody style="display:none">
                                    </tbody>
                                    <tr>
                                        <th colspan="4" scope="col" class="text-right col-6 col-sm-4">SUB TOTAL :</th>
                                        <th scope="col" class="col-6 col-sm-4">
                                            <p id="subtotal"></p>
                                        </th>
                                        <!-- <th scope="col"></th> -->
                                    </tr>
                                    <tr>
                                        <th colspan="4" scope="col" class="text-right col-6 col-sm-4">IVA :</th>
                                        <th scope="col" class="col-6 col-sm-4">
                                            <p id="igv"></p>
                                        </th>
                                        <!-- <th scope="col"></th> -->
                                    </tr>
                                    <tr>
                                        <th colspan="4" scope="col" class="text-right col-6 col-sm-4">TOTAL :</th>
                                        <th scope="col" class="col-6 col-sm-4">
                                            <input id="total" name="monto" class="font-weight-bold border-0 " readonly style="background-color: white;"></input>
                                        </th>
                                        <!-- <th scope="col"></th> -->
                                    </tr>

                                </table>
                            </div>


                        </div>



                    </div>
                    <div id="myDIV1" class="form-inline row ">
                        <div class="form-group col-sm-6">
                            <label for="Direc" class="control-label">Direccion</label>
                            @Html.DropDownList("Dirreccion", items, htmlAttributes: new { @class = "form-control", @name = "listad", @id = "Direc" })

                        </div>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" aria-label="Checkbox for following text input" onclick="ocultar()" value="Agregar nueva direccion">
                        <label class="form-check-label" for="flexCheckChecked">
                            Agregar nueva direccion
                        </label>
                    </div>
                    <div id="myDIV" style="display:none">
                        <div class="form-group">
                            <label for="listaciu" class="control-label">Ciudad</label>
                            <div class="col-md-10">
                                @Html.DropDownList("CIU_ID", null, htmlAttributes: new { @class = "form-control", @id = "listaciu" })
                                @Html.ValidationMessageFor(model => model.Item3.CIU_ID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-inline row ">
                            <div class="form-group col-sm-6">
                                <label for="CallePrincipal" class="control-label">Calle Principal</label>
                                <input type="text" class="form-control" name="Callep" id="CallePrincipal" value=" " data-error="Ingresa Calle Principal" required>
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="form-group col-sm-6">
                                <label for="CalleSecundaria" class="control-label">Calle Secundaria</label>
                                <input type="text" class="form-control" name="Calles" id="CalleSecundaria" value=" " data-error="Ingresa Calle Secundaria" required>
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>

                        <div class="form-inline row ">
                            <br>
                        </div>

                        <div class="form-inline row ">
                            <div class="form-group col-sm-6">
                                <label for="NumberC" class="control-label">Numero de Casa</label>
                                <input type="text" class="form-control" name="Numberocasa" id="NumberC" value="">
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="form-group col-sm-6">
                                <label for="detalle" class="control-label">Detalle</label>
                                <input type="text" class="form-control" name="Detalle" id="detalle" value="">
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>

                    </div>

                    <div class="form-inline row ">
                        <br>
                    </div>
                    <div class="form-inline row ">
                        <div class="form-group col-sm-6">
                            <label for="tarjeta" class="control-label">Ingresar numero de la tarjeta</label>
                            <input type="text" class="form-control" name="Tar" id="tarjeta" value="">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-inline row ">
                        <br>
                    </div>
                    <div class="form-inline row ">
                        <div class="form-group col-sm-6">
                            <label for="fcadu" class="control-label">Fecha de Caducidad</label>
                            <input type="text" class="form-control" name="Fecadu" id="fcadu" value="">
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="cvc" class="control-label">CVC</label>
                            <input type="text" class="form-control" name="CVC" id="cvc" value="">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="form-inline row ">
                        <br>
                    </div>

                    <div class="form-group">
                        <button type="submit" id="btnelim" class="btn btn-lg" style="width: 100%; height: 45px; margin: 0 auto; text-align: center; float: none; color: #fff; font-size: 17px; font-weight: normal; display: block; border-radius: 0; -webkit-border-radius: 0; -moz-border-radius: 0; -o-border-radius: 0; -ms-border-radius: 0; background-color: #ff6d3a; transition: all 0.5s ease-in-out; -webkit-transition: all 0.5s ease-in-out; -moz-transition: all 0.5s ease-in-out; -o-transition: all 0.5s ease-in-out; -ms-transition: all 0.5s ease-in-out;">Pagar</button>
                    </div>

                    <div class="form-group">
                        <a href="~/Home/Index" class="btn btn-lg" style="width: 100%; height: 45px; margin: 0 auto; text-align: center; float: none; color: #fff; font-size: 17px; font-weight: normal; display: block; border-radius: 0; -webkit-border-radius: 0; -moz-border-radius: 0; -o-border-radius: 0; -ms-border-radius: 0; background-color: #ff6d3a; transition: all 0.5s ease-in-out; -webkit-transition: all 0.5s ease-in-out; -moz-transition: all 0.5s ease-in-out; -o-transition: all 0.5s ease-in-out; -ms-transition: all 0.5s ease-in-out;">Inicio</a>
                    </div>
                </form>
            </div>

        </div>

    </main>

    </div>

    <script src="~/js/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/js/bootstrap.min.js"></script>
    <script src="~/js/js/sweetalert2.min.js"></script>

    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/emailjs-com@2.3.2/dist/email.min.js"></script>


    <script src="~/js/js/carrito.js"></script>
    <script src="~/js/js/compra.js"></script>


</body>

</html>

